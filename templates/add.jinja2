{% extends 'base.jinja2' %}

{% block subtitle %}Add a donation!{% endblock subtitle %}

{% block content %}
    <form method="POST">
        {% if error %}<p style="color:red">{{ error }}</p>{% endif %}
        <label for="donor_nm">Donor:</label><input id="donor_nm" type="text" name="name"><br>
        <label for="donation_amt">Donation: </label><input id="donation_amt" type="number" name="number">
        <input type="submit" value="Add donation!">
    </form>
{% endblock content %}